
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Percentage Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        input[type="number"] {
            margin: 5px 0;
            padding: 5px;
            width: 100px;
        }
        button {
            padding: 5px 10px;
            margin-top: 10px;
        }
        .result {
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Member Percentage Calculator</h1>

    <label for="percentage">Percentage (%):</label><br>
    <input type="number" id="percentage" step="0.01" placeholder="e.g. 14.99"><br>

    <label for="number">Member Original Money:</label><br>
    <input type="number" id="number" step="0.01" placeholder="e.g. 10"><br>

    <button onclick="calculatePercentage()">Calculate</button>

    <div class="result" id="result"></div>
    <div class="result" id="total"></div>

    <script>
        function calculatePercentage() {
            const percentage = parseFloat(document.getElementById('percentage').value);
            const number = parseFloat(document.getElementById('number').value);

            if (!isNaN(percentage) && !isNaN(number)) {
                const result = (percentage / 100) * number;
                const total = result + number;
                document.getElementById('result').innerText = `Result: ${result}`;
                document.getElementById('total').innerText = `Member Total Money: ${total}`;
            } else {
                document.getElementById('result').innerText = 'Please enter valid numbers.';
                document.getElementById('total').innerText = '';
            }
        }
    </script>

</body>
</html>
